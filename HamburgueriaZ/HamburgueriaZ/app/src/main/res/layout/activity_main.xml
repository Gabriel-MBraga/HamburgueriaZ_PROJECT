<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hamburgueria Z"
            android:layout_gravity="center"
            style="@style/estiloTexto"/>

        <TextView
            style="@style/estiloTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FaÃ§a o seu pedido :"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textSize="25sp"
            android:paddingTop="10sp" />

        <EditText
            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="2sp"
            android:hint="Nome" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecione seu adicional :"
            android:paddingTop="10sp"
            android:gravity="center"
            android:textSize="25sp"/>

        <CheckBox
            android:id="@+id/checkbox_B"
            style="@style/estiloTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bacon"
            android:layout_marginLeft="20sp" />

        <CheckBox
            android:id="@+id/checkbox_Q"
            style="@style/estiloTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Queijo"
            android:layout_marginLeft="20sp" />

        <CheckBox
            android:id="@+id/checkbox_O"
            style="@style/estiloTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Onion Rings"
            android:layout_marginLeft="20sp" />

        <TextView
            style="@style/estiloTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantidade :"
            android:paddingTop="10sp"
            android:gravity="center"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:orientation="horizontal"
            android:padding="20dp">

            <Button
                android:id="@+id/reduzir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="-" />

            <TextView
                android:id="@+id/quantidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="15dp"
                android:textSize="26dp"
                android:text="0"/>

            <Button
                android:id="@+id/aumentar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="+" />

        </LinearLayout>

        <TextView
            android:id="@+id/valorTotal"
            style="@style/estiloTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor Total : R$ 0,00"
            android:padding="10sp"
            android:gravity="center" />

        <Button
            android:id="@+id/fazerPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:layout_marginRight="100sp"
            android:padding="15sp"
            android:text="Fazer Pedido"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/resumo"
            style="@style/estiloTexto"
            android:layout_marginLeft="10sp"
            android:text="Resumo do Pedido:"/>

    </LinearLayout>

</ScrollView>